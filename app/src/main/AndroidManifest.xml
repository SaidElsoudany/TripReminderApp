<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elsoudany.said.tripreminderapp">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/appstore"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TripReminderApp">

        <activity android:name=".ProcessingTripsActivity"></activity>
        <activity android:name=".Drawer">
        </activity>
        <activity android:name=".SignUp" />
        <activity android:name=".Login" />

        <activity android:name=".AddTripActivity"></activity>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>